# MyCities Web App - Apache Configuration
# Prevents cache issues and enables SPA routing

# Enable rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /web-app/
    
    # Don't rewrite files or directories
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Rewrite everything else to index.html for SPA routing
    RewriteRule ^ index.html [L]
</IfModule>

# CRITICAL: Prevent caching of index.html
# This ensures users always get the latest version with correct JS/CSS hashes
<IfModule mod_headers.c>
    <FilesMatch "index\.html$">
        Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>

    # JS/CSS files have content hashes - safe to cache forever
    # When code changes, the hash changes, so browser fetches new file
    <FilesMatch "\.(js|css)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # Static assets - cache for 1 year
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg|webp|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
</IfModule>

# Disable ETags (can cause cache inconsistencies)
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Enable GZIP compression for faster loading
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/json
    AddOutputFilterByType DEFLATE application/javascript text/javascript
    AddOutputFilterByType DEFLATE application/x-font-ttf application/x-font-opentype
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
